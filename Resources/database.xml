<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" id = "propertyPlaceholderConfigurer">
		<property name="location" value="Customer.properties"/>
	</bean>
	
	<bean class="org.springframework.jdbc.datasource.DriverManagerDataSource" id="driverManagerDataSource" >
	<constructor-arg value="${jdbc.url}"/>
	<constructor-arg value="${jdbc.username}"/>
	<constructor-arg value="${jdbc.password}"/>
	<property name="driverClassName" value="${jdbc.driver}"/>
	</bean>
	
	</beans>